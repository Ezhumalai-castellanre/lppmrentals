# Force installation of optional dependencies
optional=true
# Ensure platform-specific binaries are installed
target_platform=linux
target_arch=x64
target_libc=glibc
# Increase network timeout for large packages
fetch-timeout=300000
# Increase network retry attempts
fetch-retries=5
# Ensure proper registry access
registry=https://registry.npmjs.org/
# Force rebuild of native modules
rebuild-bundle=true
